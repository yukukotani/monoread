{
  "name": "monoread",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI tool for reading any URL in AI-optimized format",
  "main": "dist/index.js",
  "bin": {
    "monoread": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "start": "node ./dist/index.js",
    "mcp": "tsx src/index.ts mcp",
    "mcp:debug": "LOG_LEVEL=debug tsx src/index.ts mcp",
    "mcp:inspector": "npx @modelcontextprotocol/inspector@latest tsx src/index.ts mcp",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "lint": "pnpm --parallel run '/^lint:/'",
    "fix": "biome check --write ."
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@mizchi/readability": "^0.7.7",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "gunshi": "0.27.0-alpha.10",
    "pino": "^9.3.2",
    "pino-pretty": "^11.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@power-assert/runtime": "^0.3.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "rollup-plugin-power-assert": "^0.2.0",
    "tsdown": "^0.14.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
